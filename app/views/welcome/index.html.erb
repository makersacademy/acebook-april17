<h1>Welcome to Acebook</h1>

  <p id=”notice”><%= notice %></p>

<h2>Login</h2>
  <%= form_tag sessions_path do |form| %>
    <div class=”field”>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class=”field”>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class=”actions”>
      <%= submit_tag "Login" %>
    </div>

<% end %>
<%= link_to "Sign Up", new_user_path %>
