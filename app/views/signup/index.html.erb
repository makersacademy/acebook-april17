<%= stylesheet_link_tag "signup" %>
<body class="sign_up_page" >
  <center>
    <br>
    <br>
  <h1 class="header"> Sign Up to PaceBook! </h1>
  <%= form_with scope: :signup, local: true do |form| %>
  <div class="form">
    <p>
      <%= form.label :username %>
      <br>
      <%= form.text_field :username %>
    </p>
    <p>
      <%= form.label :password %>
      <br>
      <%= form.password_field :password %>
    </p>
    <p>
      <%= form.label :email %>
      <br>
      <%= form.email_field :email %>
    </p>
    <p>
      <%= form.submit "Submit" , class: "Submit" %>
    </p>
  </div>

  <% end %>
  </center>
</body>
