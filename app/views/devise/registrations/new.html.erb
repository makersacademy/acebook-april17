<div class="row" style="height: 100px;">

</div>
<div class="row">
  <div class="col-12" align="center">
    <h2 class="colored-grey">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="c-top-container">
        <div class="field">
          <%= f.label :email, class: 'align-label colored-grey' %><br />
          <%= f.email_field :email, class: 'c-input', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'align-label colored-grey' %>
          <% if @minimum_password_length %>
          <p id="min-pass-len">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %><br />
          <%= f.password_field :password, class: 'c-input', autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'align-label colored-grey' %><br />
          <%= f.password_field :password_confirmation, class: 'c-input', autocomplete: "new-password" %>
        </div>
      </div>

      <div class="c-bottom-container">
        <div class="actions">
          <%= f.submit "Sign up", class: 'c-button' %>
        </div>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
