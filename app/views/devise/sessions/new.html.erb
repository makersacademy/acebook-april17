<div class="row">
  <div class="col-12" align="center">
    <%= image_tag "login-logo.png", class: 'login-logo' %>
    <h2 class="colored-grey">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="c-top-container">
        <div class="field">
          <%= f.label :email, class: 'align-label colored-grey' %><br />
          <%= f.email_field :email, class: 'c-input ', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: 'align-label colored-grey' %><br />
          <%= f.password_field :password, class: 'c-input', autocomplete: "current-password" %>
        </div>
      </div>
      <div class="c-bottom-container">
        <% if devise_mapping.rememberable? %>
          <div class="field remember-me">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'colored-grey' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'c-button', id: 'login-page-button' %>
        </div>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
