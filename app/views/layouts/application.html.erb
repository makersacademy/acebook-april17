<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="app/assets/stylesheets/style.css">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <!-- Global nav class -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Acebook Amoeba Boyz</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="">Home
              <span class="sr-only">(current)</span></a>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="/posts">All Posts</a>
          </li>
          <li class="nav-item mr-sm-2">
          <button type="button" class="btn btn-outline-success"><%= link_to('Sign out', destroy_user_session_path, method: :delete) %></button>
          </li>
            <% else %>
            <ul class="navbar-nav ml-auto">
            <li class="nav-link"><%= link_to 'Sign up',new_user_registration_path %></li>
            <li class="nav-link"><%= link_to 'Sign in', user_session_path %></li>
            </ul>
            <% end %>
        </ul>
      </div>
    </nav>
    <!-- Alerts for devise -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <!-- container for all views -->
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
