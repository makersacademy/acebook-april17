  <head>
    <title>Acebook</title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%# see you on the flipper side %>
    <% if logged_in? %>
        <h1>You are Logged In, <%= current_user.name %></h1>
        <%= button_to "Log Out", '/logout', method: :get %>
        <%= button_to "My Wall", '/' + current_user.id.to_s, method: :get %>
    <%end%>
    <%= button_to "Main Feed", '/posts', method: :get %>
  </head>

  <body>


    <%= yield %>

    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: [:alert, alert_for(name)]%>
    <% end %>

