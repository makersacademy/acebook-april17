<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, nil, :required => true %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, :required => true %>
  </div>
  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>