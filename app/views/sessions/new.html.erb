<%= link_to "Sign Up", root_path %>
<br>
<%= flash[:invalid_details] %>

<h1>Sign in to Acebook</h1>

<%= form_tag sessions_path do %>
  <%= label_tag :email %><br />
  <%= text_field_tag :email, params[:email] %>

  <%= label_tag :password %><br />
  <%= password_field_tag :password %>

  <%= submit_tag "Sign In" %>

<% end %>
