<div class="myDiv">
  <div class="bg">

  <h1 class="welcome">
    Welcome to&nbsp;<span>&#9824;</span>cebook
  </h1>

  <div class="login-form">
    <h2>
      Sign in
    </h2>
    <br />
    <%= form_for(:session, url: sessions_path, method: "POST") do |form| %>
    <p>
      <%= form.email_field :email, placeholder: "email", class: 'form-control'%>
    </p>
    <p>
      <%= form.password_field :password, placeholder: "password", class: 'form-control'%>
    </p>
    <p><%= flash[:danger] %></p>

    <p><%= form.submit "Log in" %></p>
    <% end %>
    <br />
    Don't have an account?
    <%= link_to "Sign up now!", new_user_path %>
  </div>
</div>
