<h1> Sign in </h1>

<%= form_for(:session, url: sessions_url, local: true) do |form| %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  <div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  <div>

  <div>
    <%= form.submit "Sign In" %>
  </div>
<% end %>
