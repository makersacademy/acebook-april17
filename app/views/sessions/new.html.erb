        <div class="myDiv">
        <div class="bg">

        <center><h1 class="welcome">Welcome to <span>&#9824;</span>cebook</</h1>

          <h1></h1>
          <!-- #deleting this messages up the page massively and i dont know why! -->

      <div class="login-form">
        <h2> Sign in</h2>
            <%= form_for(:session, url: sessions_path, method: "POST") do |form| %>
            <p><%= form.label :email %>
            <%= form.email_field :email, placeholder: "email"%>
            <p><%= form.label :password %>
            <%= form.password_field :password, placeholder: "password"%>
            <p><%= flash[:danger] %>

            <p><%= form.submit "Log in" %>
          <% end %>
        Don't have an account? <%= link_to "Sign up now!", new_user_path %>
      </div>
    </div>
  </body>
</html>
