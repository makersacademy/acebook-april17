<h1><%= @user.firstname %>'s Profile Page</h1>
<%= image_tag(rails_blob_path(@photo), size: '200x200') if @photo %>

<br>
<%= link_to "Add Photo Album", new_user_album_path(@user.id) %>
<br>
<%= link_to "Back to posts", posts_path %>
<br>
<br>

<table>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= link_to 'View Album', user_album_url(@user.id, album.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% @posts.each do |post| %>
  <% if post.user_id == @user.id %>
    <p><%= post.message %></p><br>
  <% end %>
<% end %>
