

<% if user_signed_in? %>
  <% if current_user.like?(post) %>
    <%= link_to 'Unlike', unlike_path(current_user.id, post_id: post.id), remote: true, method: :delete %>
  <% else %>
    <%= link_to 'Like', like_path(current_user.id, post_id: post.id), remote: true, method: :post%>
  <% end %>
<% end %>

<% if post.likes.count > 1 %>
  <%= post.likes.count %> people like this.
<% elsif post.likes.count > 0 %>
  <%= post.likes.count %> person likes this.
<% end %>
