<%= form_for @post do |form| %>
  <%= form.label :title %>
  <br>
  <%= form.text_field :title %>
  <br>
  <%= form.label :message %>
  <br>
  <%= form.text_field :message %>
  <br>
  <%= form.label :post_img %>
  <br>
  <%= form.file_field :post_img %>
  <br>
  <%= form.submit "Submit" %>
<% end %>
