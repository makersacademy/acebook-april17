<center>
  <%= form_for @post do |form| %>
    <h2><%= form.label :message %></h2>
    <br>
    <div class="text_field">
    <%= form.text_field :message, :size=>"70" %>
    </div>
    <br><br>
    <%= hidden_field_tag :wallUserID, @recipient %>
    <%= form.hidden_field :recipient_id, value: params[:wallUserID] %>
    <%= form.submit "Submit" %>
  <% end %>
  <br>
  <%= button_to "View posts", :back, { method: 'get'}  %>
</center>
