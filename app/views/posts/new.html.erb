<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      <div class="card-panel light-blue darken-4">
        <h2 class="white-text">Post to bookface</h2>

        <%= form_for @post do |form| %>
          <div class="input-field">
            <%= form.label :message, class: "white-text" %>
            <%= form.text_area :message, class: "white-text materialize-textarea" %>

            <%= form.submit "Submit", class: "btn waves-effect waves-light white"  %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
