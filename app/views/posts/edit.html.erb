<%= stylesheet_link_tag 'posts' %>
<div class='content'>
<div class='item'>
<%= form_for @post do |f| %>
<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
<h1>Edit post</h1>
<div class='form'>
  <%= f.label :message %>
  <%= f.text_area :message, class:'message-box' %>
  <div class='form-fields'>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
</div>
<p>
  <%= f.submit "Update" %>
  <%= link_to 'Cancel', posts_url %>
</p>
<% end %>
</div>
</div>
