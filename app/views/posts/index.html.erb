<h1> Welcome to the Acebook Avengers homepage</h1>

<% @posts.each do |post| %>
  <p><%= simple_format(post.message)%></p>
  <p><%= post.created_at%></p>
  <p><%= link_to "Modify", "/posts/#{post.id}", class:"button" %></p>
<% end %>

<% if current_user %>
<%= link_to new_post_path do %>
  New post
  <% end %>
  <% end %>
