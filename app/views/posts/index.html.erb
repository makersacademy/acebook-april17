<%= form_for(@post) do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>

  <%= form.submit "Submit" %>
<% end %>

<% @posts.each.reverse_each do |post| %>
  <p><%= post.message %></p>
  <%= current_user.firstname %>
  <%= post.created_at.in_time_zone("London").strftime("%H:%M %b %d, %Y") %>
<% end %>
