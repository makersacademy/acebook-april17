
<%= link_to "Log Out", destroy_user_session_path, method: :delete %>


<% @posts.each do |post| %>

  <span style="white-space: pre-line; color:red;">
    <p><%= post.message %>  </span>
      <span style="white-space: pre-line; color:black;">
      Created: <%= post.created_at.strftime("%B %d, %l:%M%P") %> - Updated: <%= post.updated_at.strftime("%B %d, %l:%M%P")%>
    </p>
  </span>
<span class='parent-likes'>
  <span class="like-count" <%=post.id%>'>
    This post has been liked <%= post.get_likes.size %> times.
  </span>
  <a>
    <% if current_user.liked? post %>
      <div> <%= link_to like_post_path(post, 'unlike'), class: "preached-btn", method: :put, remote: :true do %> Thumbs Up! </div>
        <% end%>
        <% else %>
      <div> <%= link_to like_post_path(post, 'like'), class: "preach-btn", method: :put, remote: :true do %> Preach </div>
        <% end%>
        <% end%>
        <a>
        </span><% end %>
