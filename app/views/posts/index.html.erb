
<div class="jumbotron">
  <p style="font-size:45px; font-weight:900">Acebook</p>
  <h2>Your posts</h2>
</div>

   <div class="container">
   <div class="row">
   <%= link_to new_post_path do %>
    <div class="btn btn-info btn-lg">
     New post
     </div>
   <% end %>
   </div>

  

     <% @posts.each do |post| %>
      <div class="alert alert-primary" role="alert">
       <p style="font-size:18px"><%= post.message %></p>
       <p>Date: <%= post.time_stamp %></p>
       <%= link_to 'Edit', edit_post_path(post) %>
       <%= link_to 'Delete', post_path(post),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
       </div>
     <% end %>
     </div>
     
