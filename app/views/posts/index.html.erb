<% @posts.each do |post| %>
  <div id="<%= post.id%>" class="posts">
    <p><%= post.message %></p>
     <%if (post.created_at + 1.hours + 5.seconds).strftime('%Y-%m-%d %H:%M:%S') > @time.to_formatted_s(:db) %>
      <%= link_to edit_post_path(post.id) do %>
        Update post
      <% end %>
     <% end %>
    
  </div>
  
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
