<% @posts.each do |post| %>
<div style="height:100px; width: 25%; margin-left: 33.5%; background-color: white; margin-bottom: 15px; border-radius: 5px; padding: 10px 10px;">
    <div style="height: 30px; width: 100%;"> 
        <div style="height: 100%; width: 30px; float: left;"> 
            <div style="background-color: black; border-radius: 30px; height: 100%; width: 30px; float: left;"></div>
        </div>
        <div style="height: 100%; width 50%; float: left;">
            <div style="font-size: 1em; margin-left: 10px; color: #3b5999; font-weight: bold;"><%= current_user.email %></div>
            <div style="width:100%;color:grey; font-size: 0.7em; margin-left: 12px;"><%= post.get_time %></div>
        </div>
    </div>
    <div style="white-space:pre-wrap; width:75%;float:left;"><%= post.message %></div>    
</div>
<% end %>

