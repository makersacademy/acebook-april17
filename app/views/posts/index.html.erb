
<%= link_to "Log Out", destroy_user_session_path, method: :delete %>


<% @posts.reverse_each do |post| %>
  <span style="white-space: pre-line">  <p><%= post.message %> <br><%= post.updated_at %></p></span>
  <% if current_user == (post.user) %>
    <%= link_to 'Delete', post_path(post), method: :delete %>
    <% if ((Time.current - post.created_at) < 10.minutes) %>
      <%= link_to "Edit", "/posts/#{post.id}", class:"button" %>
      <% end %>
  <% end %>
<% end %>
<br>
