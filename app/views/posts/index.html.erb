<p id=”notice”><%= notice %></p>
<!-- This will say "logged in" when the user has logged  in-->

<% @posts.each do |post| %>
  <p><%= post.message %></p>
    <%= form_for @post do |form| %>
      <%= form.label :message %>
      <%= form.text_area :message %>

      <%= form.submit "Submit" %>
    <% end %>
<% end %>

<% @posts.reverse.each do |post| %>
  <p><%= post.message %></p>
  <p><%= post.updated_at.in_time_zone("London") %></p>
# To-do: add user Id from user table to display in the posts
<% end %>
