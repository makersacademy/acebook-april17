<table class="table">
  <thead>
    <tr>
      <th scope="col">Message</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <p><%= post.message %></p>
            </td>
            <td>
            <td><%= button_to "Edit", edit_post_path(post), { :method => :get } %></td>
            </td>
            <td>
              <%= button_to "Delete", post_path(post), :method => :delete %>
            </td>
          </tr>
        <% end %>
  </tbody>
</table>


<%= link_to new_post_path do %>
  New post
<% end %>
