<!doctype html>
<html lang="en">
  <head>
    <title>Posts</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--  Fonts and icons  -->
      <!-- Fonts and icons -->
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">

<!-- Material Kit CSS -->
<link href="assets/material-theme/assets/css/material-kit.css?v=2.0.4" rel="stylesheet" />
</head>
<body>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse.each do |post| %>
      <tr>
        <td><%= post.message %>
        <td><%= post.created_at %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_post_path do %>
  <button class="btn btn-primary" btn-round" btn-link">New post</button>
<% end %>
                                   
                    <!--   Core JS Files   -->
<script src="assets/material-theme/assets/js/core/jquery.min.js" type="text/javascript"></script>
<script src="assets/material-theme/assets/js/core/popper.min.js" type="text/javascript"></script>
<script src="assets/material-theme/assets/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
<script src="assets/material-theme/assets/js/plugins/moment.min.js"></script>
<!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
