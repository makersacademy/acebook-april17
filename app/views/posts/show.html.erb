<% if flash[:messages] %>
  <h2><%= flash[:messages] %></h2>
<% end %>

<% if logged_in? %>
  <% if session[:wall_id] == current_user.id.to_s %>
    <h1>Welcome to your wall, <%= User.find(session[:wall_id]).name %></h1>
  <%else%>
    <h1>This wall belongs to <%= User.find(session[:wall_id]).name %></h1>
  <%end%>
<%end%>

<% @posts.each do |post| %>
  <div id="<%= post.id%>" class="posts">
    <%= simple_format(post.message) %>
    <p><%= post.user.email %></p>
    <p><%= (post.created_at + 1.hours).strftime('%d-%m-%y %H:%M:%S') %></p>
      <%if (post.created_at + 1.hours + 10.minutes).strftime('%Y-%m-%d %H:%M:%S') > @time.to_formatted_s(:db) && (current_user.id == post.user_id) %>
        <%= button_to edit_post_path(post.id), method: :get do %>
          Update post
        <% end %>
      <% end %>

      <%if current_user.id == post.user_id %>
        <%= button_to post_path(post), method: :delete do %>
          Delete post
        <% end %>
      <% end %>

      
  </div>

<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
