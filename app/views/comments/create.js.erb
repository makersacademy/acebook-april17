var alert = "Added comment!";
var level = "primary";

<% if @error.nil? %>
  var comments = document.querySelector("#comments");
  var newComment = "<div class='newComment'><%= j render(@comment) %></div>"
  comments.insertAdjacentHTML("afterbegin", newComment );
  // add new comment on top of previous ones
<% else %>
  alert = "<%= j @error %>";
  level = "danger";
<% end %>

var nav = document.querySelector(".main-body");
var flash = `<div id="flash"><div class='alert alert-${level}' role='alert'>${alert}</div></div>`;
nav.insertAdjacentHTML("beforebegin", flash );
// add flash
