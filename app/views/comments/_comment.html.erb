<%= render 'comments/form' %>
<div class="comment">
<% @post.timesort_comments.each do |comment| %>
  <div class="list-group">
    <div class="list-group-item">
    <div><%= simple_format(comment.content) %> <%= '-' if (comment.content)%> <%= User.find(comment.user_id).email if (comment.user_id)  %></div>
      <% if current_user == comment.user %>
        <%= link_to 'Delete comment', [comment.post, comment],
          method: :delete,
          data: { confirm: 'Are you sure?' } if (comment.content)%>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
