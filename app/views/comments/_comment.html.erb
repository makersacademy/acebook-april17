<div class="box">
  <article class="media">
    <div class="card comment-box"style="width: 18rem;">
        <div class="card-body">
      <div class="content">
        <p>
          <strong><%= comment.name %>: </strong>
            <%= comment.comment %>
          </p>
        </div>
      </div>

      <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?" } %>
</div>

  </article>
</div>
