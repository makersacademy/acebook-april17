<h1>Sign-up</h1>

<%= form_with scope: :user, url: users_path,  local: true do |form| %>
  <p> 
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p> 
  <%= form.label :email %>
  <%= form.email_field :email %>
</p>
<p> 
<%= form.label :password %>
<%= form.password_field :password %>
</p>
  <p>
    <%= form.submit 'Sign up' %>
  </p>
<% end %>
