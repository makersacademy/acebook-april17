<h1>Sign-up</h1>

<%= form_with model: @user, url: users_path,  local: true do |form| %>
  <p> 
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p> 
  <%= form.label :email %>
  <%= form.text_field :email %>
  </p>
  <p> 
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>
  <p>
    <%= form.submit 'Sign up' %>
  </p>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <p>
        <%= message %>
      </p>
    <% end %>
  <% end %>
<% end %>
