
<% provide(:title, 'Sign up') %>

  <div class="container">
    <h1 class="center">Sign up</h1>

    <div class="row center">
      <div class="col-md-6 col-md-offset-3">
        <div>
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name, id:"name", class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, id:"email", class: 'form-control' %>

        <%= f.label :username %>
        <%= f.text_field :username, id:"username", class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, id:"password", class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, id:"password_confirmation", class: 'form-control' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
      <% end %>
      </div>

    </div>
  </div>
</div>
