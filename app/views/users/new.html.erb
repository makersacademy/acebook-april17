<div class="myDiv">
  <div class="bg">

    <h1 class="welcome">
      Welcome to&nbsp;<span>&#9824;</span>cebook
    </h1>

    <div class="login-form">
      <h2>Sign up</h2>
      <br>
      <%= form_for @user do |form| %>

      <p><%= form.text_field :username, placeholder: "username", class: 'form-control'%></p>

      <p><%= form.email_field :email, placeholder: "email", class: 'form-control'%></p>

      <p><%= form.password_field :password, placeholder: "password", class: 'form-control'%></p>
      <br>
      <%= flash[:danger] %>
      <p><%= form.submit "Submit" %></p>
      <% end %>

      Already have an account?
      <%= link_to "Log in", root_path %>
    </div>
  </div>
</div>
