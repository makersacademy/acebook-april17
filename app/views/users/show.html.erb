<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> - Wall
      </h1>
    </section>
  </aside>
</div>
<div>
  <% post = Post.new %>
  <%= form_for post do |form| %>
    <%= form.hidden_field :user_id %>
    <%= form.label :message %>
    <%= form.text_area :message %>

    <%= form.submit "Submit" %>
  <% end %>
</div>
