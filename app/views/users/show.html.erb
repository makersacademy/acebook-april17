<h1>
  Welcome, <%= @user.firstname %>
</h1>

<%= image_tag @user.avatar.url(:profile)  if @user.avatar? %>

<% if current_user == @user %>
  <%= form_for(current_user, html: { multipart: true }) do |f| %>
    Update profile pic:
    <span class="avatar">
      <%= f.file_field :avatar %>
    </span>
    <%= f.submit "Update", class: "btn btn-primary" %>
  <% end %>
<% end %>

<h2>
  <p> Type of Animal: </p> <%= @user.firstname %>
  <p> Age: </p>
  <p> Owner: </p>
</h2>
