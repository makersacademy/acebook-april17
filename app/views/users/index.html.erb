<% provide(:title, 'All users') %>
<h1>All users</h1>
<ul class="users">
<% @users.each do |user| %>
<li>
<% if user.avatar.attached? %>
    <%= image_tag(user.avatar, class:"display-prof-pic") %>
<% else %>
    <%= gravatar_for user %>
<% end %>
<%= link_to user.username, user %>
<%= link_to user.email, user %>
</li>
<% end %>